<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        android:textColor="#666666"
        tools:ignore="RtlCompat,Suspicious0dp" />

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        android:textColor="#000000"
        tools:ignore="RtlCompat,Suspicious0dp" />

    <LinearLayout
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="6"
            android:background="#6A4C93"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- First Row: sin, log, ln, (, ) -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bsin"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/blog"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bln"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bb1"
                    android:text="("
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bb2"
                    android:text=")"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <!-- Second Row: cos, AC, C, 1/x, ÷ -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bcos"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bac"
                    android:text="AC"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bc"
                    android:text="C"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/binverse"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bdivide"
                    android:text="÷"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <!-- Third Row: tan, 7, 8, 9, × -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/btan"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b7"
                    android:text="7"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b8"
                    android:text="8"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b9"
                    android:text="9"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bmultiply"
                    android:text="×"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <!-- Fourth Row: X!, 4, 5, 6, - -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bfactorial"
                    android:text="X!"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b4"
                    android:text="4"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b5"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b6"
                    android:text="6"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bsubtract"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <!-- Fifth Row: √, 1, 2, 3, + -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bsqrt"
                    android:text="√"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b1"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b2"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b3"
                    android:text="3"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/badd"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <!-- Sixth Row: x², π, 0, ., = -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bsquare"
                    android:text="x²"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bpi"
                    android:text="π"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/b0"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bdot"
                    android:text="."
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/bequals"
                    android:text="="
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>